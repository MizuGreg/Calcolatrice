#:kivy 1.10.1

<Button>:
    font_size: 21
    font_name: "DejaVuSans"
    background_normal: "atlas://atlas/button/atlas_0/button"
    background_down: "atlas://atlas/button/atlas_0/button_down"

<CalcolatriceGame>:
    Label:
        id: riga_input
        halign: "right"
        font_size: 28
        font_name: "DejaVuSans"
        markup: True
        shorten: True
        shorten_from: "left"
        pos: (0, root.height / 10 * 9)
        size: (root.width - 30, root.height / 10)
        text_size: (root.width - 35, root.height / 10)
        text: root.espress
    Label:
        id: riga_output
        halign: "right"
        font_size: 28
        font_name: "DejaVuSans"
        markup: True
        shorten: True
        shorten_from: "left"
        pos: (0, root.height / 10 * 8 - 30)
        size: (root.width - 30, root.height / 10)
        text_size: (root.width - 35, root.height / 10)
        text: root.ans
    GridLayout:
        #rows: 8
        cols: 5
        width: root.width
        height: root.height / 10 * 7
        Button:
            id: log
            text: "log"
            on_release: root.bott_funz(self.text)
        Button:
            id: ln
            text: "ln"
            on_release: root.bott_funz(self.text)
        Button:
            id: num_nep
            text: "e"
            on_release: root.bott_funz(self.text)
        Button:
            id: percent
            text: "%"
            disabled: True
        Button:
            id: simb_gradi
            text: u"\u00b0"
            disabled: True
        Button:
            id: sin
            text: "sin"
            on_release: root.bott_funz(self.text)
        Button:
            id: cos
            text: "cos"
            on_release: root.bott_funz(self.text)
        Button:
            id: tan
            text: "tan"
            on_release: root.bott_funz(self.text)
        Button:
            id: pi_greco
            text: u"\u03c0"
            on_release: root.bott_funz(self.text)
        Button:
            id: gradi_rad
            text: u"\u00b0 / rad"
            disabled: True
        Button:
            id: alla_2
            text: u"a\u00b2"
            on_release: root.bott_funz(self.text)
        Button:
            id: alla_3
            text: u"a\u00b3"
            on_release: root.bott_funz(self.text)
        Button:
            id: alla_n
            text: u"a\u207f"
            on_release: root.bott_funz(self.text)
        Button:
            id: radice
            text: u"\u221a"
            on_release: root.bott_funz(self.text)
            disabled: True
        Button:
            id: linea_frazione
            markup: True
            text: u'[sup][size=16]a[/size][/sup]/[sub][size=16]b[/size][/sub]'
            disabled: True
        Button:
            id: shift
            text: "SHIFT"
            disabled: True
            on_release: root.shift()
        Button:
            id: sinistra
            text: u"\u2190"
            on_release: root.sx()
        Button:
            id: destra
            text: u"\u2192"
            on_release: root.dx()
        Button:
            id: delete
            text: "DEL"
            on_release: root.delete()
        Button:
            id: ac
            text: "AC"
            on_release: root.ac()
        Button:
            id: cifra_7
            text: "7"
            on_release: root.bott_funz(self.text)
        Button:
            id: cifra_8
            text: "8"
            on_release: root.bott_funz(self.text)
        Button:
            id: cifra_9
            text: "9"
            on_release: root.bott_funz(self.text)
        Button:
            id: par_aperta
            text: "("
            on_release: root.bott_funz(self.text)
        Button:
            id: par_chiusa
            text: ")"
            on_release: root.bott_funz(self.text)
        Button:
            id: cifra_4
            text: "4"
            on_release: root.bott_funz(self.text)
        Button:
            id: cifra_5
            text: "5"
            on_release: root.bott_funz(self.text)
        Button:
            id: cifra_6
            text: "6"
            on_release: root.bott_funz(self.text)
        Button:
            id: molt
            text: u"\u00d7"
            on_release: root.bott_funz(self.text)
        Button:
            id: div
            text: u"\u00f7"
            on_release: root.bott_funz(self.text)
        Button:
            id: cifra_1
            text: "1"
            on_release: root.bott_funz(self.text)
        Button:
            id: cifra_2
            text: "2"
            on_release: root.bott_funz(self.text)
        Button:
            id: cifra_3
            text: "3"
            on_release: root.bott_funz(self.text)
        Button:
            id: addiz
            text: "+"
            on_release: root.bott_funz(self.text)
        Button:
            id: sottraz
            text: "-"
            on_release: root.bott_funz(self.text)
        Button:
            id: cifra_0
            text: "0"
            on_release: root.bott_funz(self.text)
        Button:
            id: virgola
            text: ","
            on_release: root.bott_funz(self.text)
        Button:
            id: dieci_alla
            text: u"\u00d710\u207f"
            on_release: root.bott_funz(self.text)
        Button:
            id: ans
            text: "Ans"
        Button:
            id: uguale
            text: "="
            on_release: root.update_output()
